distdir:
	$(MAKEDIRS) $(distdir)/cshellsynth
	$(COPY) *.c *.h depend extconf.rb $(distdir)
	$(RM) $(distdir)/cshellsynth.c
	$(COPY) cshellsynth/*.rb $(distdir)/cshellsynth/
install-data:
install-exec: install
uninstall:
install-dvi:
install-html:
install-ps:
install-pdf:
installdirs:
check:
installcheck:
mostlyclean: clean
maintainer-clean: realclean
dvi:
pdf:
ps:
info:
html:
tags:
ctags:

pre-install-rb:
	$(MAKEDIRS) $(RUBYARCHDIR)/cshellsynth

install-rb:
	$(INSTALL_DATA) "cshellsynth/extra.rb" $(RUBYARCHDIR)/cshellsynth/extra.rb

$(DLLIB): ./../src/libcshellsynth.la

./../src/libcshellsynth.la:
	(cd ../src && $(MAKE) libcshellsynth.la) || exit 1
